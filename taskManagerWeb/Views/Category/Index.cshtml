@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Bookstore Task Manager</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New</a>
        </div>
    </div>
    <br /> <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Index
            </th>
            <th> 
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Task Notes
            </th>
            <th>
                Ordered DateTime
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
                <tr>
                    <td>
                        @obj.Id
                    </td>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        @obj.Comments
                    </td>
                    <td>
                        @obj.CreatedDateTime
                    </td>
                    <td>
                        <div class="btn-group w-75" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-outline-warning"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-warning"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
    }
    </tbody>
</table>

</div>

      
     
 
    
    
