@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Bookstore Task Manager</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Catagory</a>
        </div>
    </div>
    <br /> <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Index
            </th>
            <th> 
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                TaskNotes
            </th>
            <th>
                DateTime
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
                <tr>
                    <td>
                        @obj.Id
                    </td>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                <td>
                    @obj.Comments
                </td>
                    <td>
                        @obj.CreatedDateTime
                    </td>
                </tr>
    }
    </tbody>
</table>

</div>

      
     
 
    
    
