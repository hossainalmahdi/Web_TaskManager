@model Category

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input type="text" placeholder="Enter Name" asp-for="Name" class="form-control"/>
            @* Client side Validation *@
            <span asp-validation-for="Name" class="text-warning"></span> 
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" placeholder="Enter Number" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-warning"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Comments">Task Notes</label>
            <input asp-for="Comments" placeholder="Enter Additional Notes" class="form-control" />
            <span asp-validation-for="Comments" class="text-warning"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="category" asp-action="Index" class="btn btn-secondary" style="width:150px">Back To Table</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
    
